<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cofc.edu.yipyap.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/yipyap"
        android:layout_centerHorizontal="true"
        android:id="@+id/yipyap"
        android:textSize="36pt"
        android:layout_margin="12pt"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/howto"
        android:text="@string/how_to_play"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/start"
        android:layout_margin="8pt"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"
        android:padding="5pt"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/records"
        android:text="@string/records"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/howto"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"
        android:padding="5pt"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start"
        android:text="@string/start_game"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/howto"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"
        android:padding="5pt"
        />
</RelativeLayout>
