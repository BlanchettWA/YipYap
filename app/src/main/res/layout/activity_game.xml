<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="Topic:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="15dp"
        android:id="@+id/topic"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Player's Turn:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topic"
        android:layout_alignStart="@+id/topic"
        android:layout_marginTop="11dp"
        android:id="@+id/playerTurn"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="38dp"
        android:id="@+id/timeLeft"
        android:text="Time Left"
        android:textStyle="normal|bold"
        android:format="00:00"
        android:textSize="18sp"
        android:layout_above="@+id/playerTurn"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/topic" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_below="@+id/playerTurn"
        android:layout_alignStart="@+id/playerTurn"
        android:layout_marginTop="22dp"
        android:id="@+id/enterWords"
        android:layout_alignEnd="@+id/timeLeft"
        android:text="Enter Words Here:"
        android:textStyle="normal|bold" />

    <Button
        android:text="Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/enterWords"
        android:layout_marginBottom="13dp"
        android:id="@+id/home" />

    <Button
        android:text="Done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/home"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:id="@+id/done" />

</RelativeLayout>